<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/underLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp1"
        android:background="@mipmap/img_yckznew_timeline" />

    <LinearLayout
        android:id="@+id/errorDesLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_value_dp45"
        android:layout_marginTop="@dimen/dimen_value_dp5"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/tips_" />

        <TextView
            android:id="@+id/errorMsgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号格式输入不正确"
            android:textColor="#61ADBA"
            android:textSize="@dimen/dimen_value_sp10" />

    </LinearLayout>
</LinearLayout>