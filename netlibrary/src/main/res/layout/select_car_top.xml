<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_value_dp50"
        android:layout_marginRight="@dimen/dimen_value_dp50"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/dimen_value_dp5"
        app:rv_strokeColor="@color/car_stroke_gray"
        app:rv_strokeWidth="@dimen/dimen_value_dp1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_value_dp48"
            android:gravity="center"
            android:text="选择爱车"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_value_sp16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_value_dp1"
            android:layout_marginLeft="@dimen/dimen_value_dp5"
            android:layout_marginRight="@dimen/dimen_value_dp5"
            android:background="@color/regis_bg" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_recyclevew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_value_dp5" />
    </com.flyco.roundview.RoundLinearLayout>
</LinearLayout>