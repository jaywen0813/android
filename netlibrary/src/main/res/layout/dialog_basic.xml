<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    android:layout_marginLeft="@dimen/dimen_value_dp15"
    android:layout_marginRight="@dimen/dimen_value_dp15"
    app:rv_backgroundColor="#FF1E242C"
    app:rv_cornerRadius="@dimen/dialog_corner_height">

    <include
        layout="@layout/dialog_title_close"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_value_dp25"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/top_img"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/fingerprint_icon"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content_dialog_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_value_dp25"
        android:layout_marginLeft="@dimen/dimen_value_dp30"
        android:layout_marginRight="@dimen/dimen_value_dp30"
        android:layout_marginTop="@dimen/dimen_value_dp25"
        android:gravity="center"
        android:text="我是一个兵来自老百姓"
        android:lineSpacingExtra="@dimen/dimen_value_dp2"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_value_sp16" />

    <include layout="@layout/dialog_bottom_btn" />

</com.flyco.roundview.RoundLinearLayout>