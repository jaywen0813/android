<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/head_view"
    android:layout_height="@dimen/app_bar_height"
   >

    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_value_dp15"
            android:layout_marginRight="@dimen/dimen_value_dp15"
            android:src="@mipmap/new_back" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_layer_head"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_value_sp18" />

    <LinearLayout
        android:id="@+id/navigation_user_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="@dimen/dimen_value_dp15"
        android:paddingLeft="@dimen/dimen_value_dp15"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/navigation_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/message_center_setting"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/farm_input_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_value_sp15"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>