<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp0.5"
        android:background="@color/dialog_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp45"
        android:orientation="horizontal">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:rv_backgroundColor="#FF1E242C"
            app:rv_backgroundPressColor="@color/dialog_gray"
            app:rv_cornerRadius_BL="@dimen/dialog_corner_height" />

        <View
            android:id="@+id/base_dialog_bottom_middle_line"
            android:layout_width="@dimen/dimen_value_dp0.5"
            android:layout_height="match_parent"
            android:background="@color/dialog_gray" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_confirm_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_value_sp16"
            app:rv_backgroundColor="#FF1E242C"
            app:rv_backgroundPressColor="@color/dialog_gray"
            app:rv_cornerRadius="@dimen/dialog_corner_height" />
    </LinearLayout>

</merge>